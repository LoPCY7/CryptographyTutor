<Window x:Class="CryptographyTutor.TestCBC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptographyTutor"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="TestCBC" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="18,10,0,0" TextWrapping="Wrap" Text="Key" VerticalAlignment="Top" Width="241"/>
        <Button x:Name="btnEncrypt" Content="Encrypt" HorizontalAlignment="Left" Height="29" Margin="18,54,0,0" VerticalAlignment="Top" Width="171" Click="btnEncrypt_Click"/>
        <Button x:Name="btnDecrypt" Content="Decrypt" HorizontalAlignment="Left" Height="29" Margin="18,99,0,0" VerticalAlignment="Top" Width="171" Click="btnDecrypt_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Height="32" Margin="47,168,0,0" VerticalAlignment="Top" Width="127" Click="btnExit_Click"/>

    </Grid>
</Window>