<UserControl x:Class="CryptographyTutor.Pages.Tutor.CET"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Classical Encryption Techniques" Style="{StaticResource Heading1}" Margin="0,0,0,8" />

                <mui:ModernTab SelectedSource="/Content/EncrPages/AES/Encryption.xaml" Layout="List">
                    <mui:ModernTab.Links>
                        <mui:Link DisplayName="Chapter 1" Source="/Content/EncrPages/AES/Encryption.xaml" />
                        <mui:Link DisplayName="Chapter 2" Source="/Content/EncrPages/AES/Decryption.xaml" />
                    </mui:ModernTab.Links>
                </mui:ModernTab>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>