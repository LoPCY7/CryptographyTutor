<UserControl x:Class="CryptographyTutor.Pages.AchievementBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:content="clr-namespace:CryptographyTutor.Pages"
             mc:Ignorable="d" >
    <StackPanel Height="100" Width="600">
        <TextBlock FontWeight="Bold" FontSize="24" Text="Name" Margin="0,0,0,16" Name="txtName"/>
        <Grid HorizontalAlignment="Center" Width="450">
            <TextBlock FontSize="16" Text="Description" HorizontalAlignment="Left" Name="txtDescription"/>
            <TextBlock FontSize="16" Text="Score" HorizontalAlignment="Right" Name="txtScore"/>
        </Grid>
    </StackPanel>
</UserControl>
