<UserControl x:Class="CryptographyTutor.Pages.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Name="txtPlayerName" Text="Hello, playerName" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
                <TextBlock Name="txtPlayerScore" Text="Score: 0" Style="{StaticResource Heading2}"/>
                <ProgressBar Minimum="0" Maximum="100" Value="7" Height="16" IsIndeterminate="False" Margin="0,0,0,16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
