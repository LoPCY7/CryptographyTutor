<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Data Encryption Standard (DES)" Style="{StaticResource Heading1}" />
				<TextBlock Text="• most widely used block cipher in world" />
<TextBlock Text="• adopted in 1977 by NBS (now NIST)" />
<TextBlock Text="– as FIPS PUB 46" />
<TextBlock Text="• encrypts 64-bit data using 56‐bit key" />
<TextBlock Text="• has widespread use" />
<TextBlock Text="• has been considerable controversy over its" />
<TextBlock Text="security" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
