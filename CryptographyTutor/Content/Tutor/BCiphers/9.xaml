<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._9"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Initial Permutation IP" Style="{StaticResource Heading1}" />
				<TextBlock Text="first step of the data computation" />
<TextBlock Text="IP reorders the input data bits" />
<TextBlock Text="even bits to LH half, odd bits to RH half" />
<TextBlock Text="quite regular in structure (easy in h/w)" />
<TextBlock Text="example:" />
<TextBlock Text="IP(675a6967 5e5a6b5a) = (ffb2194d 004df6fb)" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
