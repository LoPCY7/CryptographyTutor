<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="DES Round Structure" Style="{StaticResource Heading1}" />
				<TextBlock Text="uses two 32-bit L &amp; R halves" />
<TextBlock Text="• as for any Feistel cipher can describe as:" />
<TextBlock Text="Li = Ri–1" />
<TextBlock Text="Ri = Li 1 Li- F(Ri 1 Ki)" />
<TextBlock Text="Ri–1, • F takes 32-bit R half and 48-bit subkey:" />
<TextBlock Text="– expands R to 48-bits using perm E" />
<TextBlock Text="– adds to subkey using XOR" />
<TextBlock Text="– passes through 8 S-boxes to get 32-bit result" />
<TextBlock Text="– finally permutes using 32-bit perm P" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
