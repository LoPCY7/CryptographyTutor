<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._18"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Strength of DES – Analytic Attacks" Style="{StaticResource Heading1}" />
				<TextBlock Text="now have several analytic attacks on DES" />
<TextBlock Text="these utilise some deep structure of the cipher" />
<TextBlock Text="by gathering information about encryptions" />
<TextBlock Text="can eventually recover some/all of the sub‐key bits" />
<TextBlock Text="if necessary then exhaustively search for the rest" />
<TextBlock Text="generally these are statistical attacks" />
<TextBlock Text="differential cryptanalysis" />
<TextBlock Text="linear cryptanalysis" />
<TextBlock Text="related key attacks" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
