<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="DES History" Style="{StaticResource Heading1}" />
				<TextBlock Text="• IBM developed Lucifer cipher" />
<TextBlock Text="– by team led by Feistel in late 60’s" />
<TextBlock Text="– used 64-bit data blocks with 128-bit key" />
<TextBlock Text="• then redeveloped as a commercial cipher with" />
<TextBlock Text="input from NSA and others" />
<TextBlock Text="• in 1973 NBS issued request for proposals for a" />
<TextBlock Text="national cipher standard" />
<TextBlock Text="• IBM submitted their revised Lucifer which was" />
<TextBlock Text="eventually accepted as the DES" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
