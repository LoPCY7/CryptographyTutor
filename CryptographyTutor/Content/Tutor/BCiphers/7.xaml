<UserControl x:Class="CryptographyTutor.Content.Tutor.BCiphers._7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="DES Design Controversy" Style="{StaticResource Heading1}" />
				<TextBlock Text="although DES standard is public" />
<TextBlock Text="• was considerable controversy over design" />
<TextBlock Text="– in choice of 56-bit key (vs Lucifer 128-bit)" />
<TextBlock Text="– and because design criteria were classified" />
<TextBlock Text="• subsequent events and public analysis show in" />
<TextBlock Text="fact design was appropriate" />
<TextBlock Text="• use of DES has flourished" />
<TextBlock Text="– especially in financial applications" />
<TextBlock Text="– still standardised for legacy application use" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
