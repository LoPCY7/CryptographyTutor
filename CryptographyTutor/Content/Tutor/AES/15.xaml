<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._15"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Add Round Key" Style="{StaticResource Heading1}" />
				<TextBlock Text="-XOR state with 128-bits of the round key" />
<TextBlock Text="-again processed by column (though effectively" />
<TextBlock Text="a series of byte operations)" />
<TextBlock Text="-inverse for decryption identical" />
<TextBlock Text="-since XOR own inverse, with reversed keys" />
<TextBlock Text="-designed to be as simple as possible" />
<TextBlock Text="-a form of Vernam cipher on expanded key" />
<TextBlock Text="-requires other stages for complexity / security" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
