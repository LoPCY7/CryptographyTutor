<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._17"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="AES Key Expansion" Style="{StaticResource Heading1}" />
				<TextBlock Text="-takes 128-bit (16-byte) key and expands into" />
<TextBlock Text="array of 44/52/60 32-bit words" />
<TextBlock Text="-start by copying key into first 4 words" />
<TextBlock Text="-then loop creating words that depend on" />
<TextBlock Text="values in previous &amp; 4 places back" />
<TextBlock Text="-in 3 of 4 cases just XOR these together" />
<TextBlock Text="-1st word in 4 has rotate + S-box + XOR round" />
<TextBlock Text="constant on previous, before XOR 4th back" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
