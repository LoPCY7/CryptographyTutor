<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._8"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Substitute Bytes" Style="{StaticResource Heading1}" />
				<TextBlock Text="• a simple substitution of each byte" />
<TextBlock Text="• uses one table of 16x16 bytes containing a" />
<TextBlock Text="permutation of all 256 8-bit values" />
<TextBlock Text="• each byte of state is replaced by byte indexed by row" />
<TextBlock Text="(left 4-bits) &amp; column (right 4-bits)" />
<TextBlock Text="– eg. byte {95} is replaced by byte in row 9 column 5" />
<TextBlock Text="– which has value {2A}" />
<TextBlock Text="• S-box constructed using defined transformation of" />
<TextBlock Text="values in GF(28)" />
<TextBlock Text="• designed to be resistant to all known attacks" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
