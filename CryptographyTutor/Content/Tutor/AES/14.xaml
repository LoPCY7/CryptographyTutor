<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._14"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Mix Columns" Style="{StaticResource Heading1}" />
				<TextBlock Text="can express each col as 4 equations" />
<TextBlock Text="– to derive each new byte in col" />
<TextBlock Text="• decryption requires use of inverse matrix" />
<TextBlock Text="– with larger coefficients, hence a little harder" />
<TextBlock Text="• have an alternate characterisation" />
<TextBlock Text="– each column a 4-term polynomial" />
<TextBlock Text="– with coefficients in GF(28)" />
<TextBlock Text="– and polynomials multiplied modulo (x4+1)" />
<TextBlock Text="• coefficients based on linear code with" />
<TextBlock Text="maximal distance between codewords" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
