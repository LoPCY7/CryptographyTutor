<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Shift Rows" Style="{StaticResource Heading1}" />
				<TextBlock Text="• a circular byte shift" />
<TextBlock Text="– 1st row is unchanged" />
<TextBlock Text="– 2nd row does 1 byte circular shift to left" />
<TextBlock Text="– 3rd row does 2 byte circular shift to left" />
<TextBlock Text="– 4th row does 3 byte circular shift to left" />
<TextBlock Text="• decrypt inverts using shifts to right" />
<TextBlock Text="• since state is processed by columns, this step" />
<TextBlock Text="permutes bytes between the columns" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
