<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="AES Structure" Style="{StaticResource Heading2}" />
                <TextBlock Text="Content goes here" />
				<TextBlock Text="Key is expanded to array of words" />
				<TextBlock Text="It has 9/11/13 rounds (depending on the key size). Each state undergoes by:" />
				<TextBlock Text="-byte substitution using SBox" />
				<TextBlock Text="-shift rows" />
				<TextBlock Text="-mix columns" />
				<TextBlock Text="-add round key" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
