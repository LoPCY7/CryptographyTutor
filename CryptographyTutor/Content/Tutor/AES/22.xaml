<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._22"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="AES Decryption" Style="{StaticResource Heading1}" />
				<TextBlock Text="• AES decryption is not identical to encryption" />
<TextBlock Text="since steps done in reverse" />
<TextBlock Text="• but can define an equivalent inverse cipher" />
<TextBlock Text="with steps as for encryption" />
<TextBlock Text="– but using inverses of each step" />
<TextBlock Text="– with a different key schedule" />
<TextBlock Text="• works since result is unchanged when" />
<TextBlock Text="– swap byte substitution &amp; shift rows" />
<TextBlock Text="– swap mix columns &amp; add (tweaked) round key" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
