             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Key Expansion Rationale" Style="{StaticResource Heading1}" />
				<TextBlock Text="• designed to resist known attacks" />
<TextBlock Text="• design criteria included" />
<TextBlock Text="– knowing part key insufficient to find many more" />
<TextBlock Text="– invertible transformation" />
<TextBlock Text="– fast on wide range of CPU’s" />
