<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._11"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Mix Columns" Style="{StaticResource Heading1}" />
				<TextBlock Text="each column is processed separately" />
<TextBlock Text="• each byte is replaced by a value dependent on" />
<TextBlock Text="all 4 bytes in the column" />
<TextBlock Text="• effectively a matrix multiplication in GF(28)" />
<TextBlock Text="using prime poly m(x) =x8+x4+x3+x+1" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
