<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._13"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="AES Arithmetic" Style="{StaticResource Heading1}" />
				<TextBlock Text="uses arithmetic in the finite field GF(28)" />
<TextBlock Text="• with irreducible polynomial" />
<TextBlock Text="m(x) = x8 + x4 + x3 + x + 1" />
<TextBlock Text="which is (100011011) or {11b}" />
<TextBlock Text="• e.g." />
                <TextBlock Text="• {02} • {87} mod {11b} = (1 0000 1110) mod {11b}" />
<TextBlock Text="= (1 0000 1110) xor (1 0001 1011) = (0001 0101)" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
