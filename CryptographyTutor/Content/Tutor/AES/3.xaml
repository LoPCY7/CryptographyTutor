<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Origins" Style="{StaticResource Heading2}" />
                <TextBlock Text="AES was created as a replacement for DES, as DES:" />
				<TextBlock Text="– has theoretical attacks that can break it" />
				<TextBlock Text="– has demonstrated exhaustive key search attacks" />
				<TextBlock Text="Triple DES can be used, but it is slow and it has small blocks" />
				<TextBlock/>
				<TextBlock Text="US NIST issued call for ciphers in 1997"/>
				<TextBlock Text="-in June 1998, 15 candidates accepted"/>
				<TextBlock Text="-in August 1998, 5 of those candidates were shortlisted"/>
				<TextBlock Text="-in October 2000, Rijndael Algorithm was selected as the AES"/>
				<TextBlock Text="-in November 2001, AES was issued as FIPS PUB 197 standard"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>