<UserControl x:Class="CryptographyTutor.Content.Tutor.AES._7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Some Comments on AES" Style="{StaticResource Heading2}" />
                <TextBlock Text="It is an iterative cipher" />
				<TextBlock Text="The key is expanded into an array of 32-bit words" />
				<TextBlock Text="The round key is formed by four words in each round" />
				<TextBlock Text="Only the AddRoundKey stage uses the key" />
				<TextBlock Text="Each stage is easily reversible" />
				<TextBlock Text="-decryption uses keys in reverse order" />
				<TextBlock Text="-decryption recovers plaintext" />
				<TextBlock Text="Final round has only 3 stages" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
