<UserControl x:Class="CryptographyTutor.Content.Tutor.Introduction._10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Security Service" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
                <TextBlock Text="Security Service enhances the security of data processing systems and information transfers of an organization." TextWrapping="Wrap" FontSize="18" />
				<TextBlock Text="•It is intended to counter security attacks" TextWrapping="Wrap" FontSize="16"/>
				<TextBlock Text="-By using one or more security attacks" TextWrapping="Wrap" FontSize="14"/>
				<TextBlock Text="-Often replicates functions normally associated with physical documents" TextWrapping="Wrap" FontSize="14"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
