<UserControl x:Class="CryptographyTutor.Content.Tutor.Introduction._4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Level of Impact" Style="{StaticResource Heading1}" Margin="0,0,0,8" />
                <TextBlock Text="Three levels of impact can be defined for a security breach:" TextWrapping="Wrap" Width="480" FontSize="18"/>
                <TextBlock Text="•Low" TextWrapping="Wrap" FontSize="16"/>
                <TextBlock Text="•Moderate" TextWrapping="Wrap" FontSize="16" />
                <TextBlock Text="•High" TextWrapping="Wrap" FontSize="16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
