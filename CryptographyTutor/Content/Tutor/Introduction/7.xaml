<UserControl x:Class="CryptographyTutor.Content.Tutor.Introduction._7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Aspects of Security" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
				<TextBlock Text="Consider 3 aspects of information security:" FontSize="18"/>
                <TextBlock Text="•Security attacks" FontSize="16"/>
				<TextBlock Text="•Security mechanisms" FontSize="16"/>
				<TextBlock Text="•Security services" FontSize="16"/>
				<TextBlock/>
				<TextBlock Text="Note the terms:" FontSize="18"/>
				<TextBlock Text="•Thread: a potential of violation of security" FontSize="16"/>
				<TextBlock Text="•Attack: an assault on system security, a deliberate attempt to evade security services" FontSize="16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>