<UserControl x:Class="CryptographyTutor.Content.Tutor.CET._5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Requirements" Style="{StaticResource Heading1}" />
				<TextBlock Text="There are two requirements for secure use of symmetric encryption:"/>
<TextBlock Text="a strong encryption algorithm"/>
<TextBlock Text="a secret key known only to sender / receiver"/>
<TextBlock Text="Mathematically have:"/>
<TextBlock Text="Y = E(K, X)"/>
<TextBlock Text="X = D(K, Y)"/>
<TextBlock Text="assume encryption algorithm is known"/>
<TextBlock Text="implies a secure channel to distribute key"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
