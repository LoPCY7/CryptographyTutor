<UserControl x:Class="CryptographyTutor.Content.Tutor.CET._14"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Monoalphabetic Cipher" Style="{StaticResource Heading1}" />
				<TextBlock Text="rather than just shifting the alphabet" />
<TextBlock Text="• could shuffle (jumble) the letters arbitrarily" />
<TextBlock Text="• each plaintext letter maps to a different random" />
<TextBlock Text="ciphertext letter" />
<TextBlock Text="• hence key is 26 letters long" />
<TextBlock Text="Plain: abcdefghijklmnopqrstuvwxyz" />
<TextBlock Text="Cipher: DKVQFIBJWPESCXHTMYAUOLRGZN" />
<TextBlock Text="Plaintext: ifwewishtoreplaceletters" />
<TextBlock Text="Ciphertext: WIRFRWAJUHYFTSDVFSFUUFYA" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
