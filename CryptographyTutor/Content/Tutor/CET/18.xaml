<UserControl x:Class="CryptographyTutor.Content.Tutor.CET._18"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Use in Cryptanalysis" Style="{StaticResource Heading1}" />
				<TextBlock Text="• key concept - monoalphabetic substitution ciphers" />
<TextBlock Text="do not change relative letter frequencies" />
<TextBlock Text="• discovered by Arabian scientists in 9th century" />
<TextBlock Text="• calculate letter frequencies for ciphertext" />
<TextBlock Text="• compare counts/plots against known values" />
<TextBlock Text="• if caesar cipher look for common peaks/troughs" />
<TextBlock Text="– peaks at: A-E-I triple, NO pair, RST triple" />
<TextBlock Text="– troughs at: JK, X-Z" />
<TextBlock Text="• for monoalphabetic must identify each letter" />
<TextBlock Text="– tables of common double/triple letters help" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
