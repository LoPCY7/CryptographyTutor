<UserControl x:Class="CryptographyTutor.Content.Tutor.CET._20"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="One-Time Pad" Style="{StaticResource Heading1}" />
				<TextBlock Text="if a truly random key as long as the message is used," />
<TextBlock Text="the cipher will be secure" />
<TextBlock Text="• called a One-Time pad" />
<TextBlock Text="• is unbreakable since ciphertext bears no statistical" />
<TextBlock Text="relationship to the plaintext" />
                <TextBlock Text="• since for any plaintext &amp;  any ciphertext there exists" />
<TextBlock Text="a key mapping one to other" />
<TextBlock Text="• can only use the key once though" />
                <TextBlock Text="• problems in generation &amp;  safe distribution of key" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
